      /* Payment option styling */
      .payment-option {
        cursor: pointer;
        transition: all 0.3s ease;
        border: 2px solid #e9ecef;
        border-radius: 15px;
        overflow: hidden;
        position: relative;
        background: linear-gradient(145deg, #ffffff, #f8f9fa);
